---
const nav = [
  { href: "/", label: "Home" },
  { href: "/work/", label: "Work" },
  { href: "/photography/", label: "Photography" },
  { href: "/about/", label: "About" },
  { href: "/contact/", label: "Contact" },
];
---
<header class="site-header">
  <div class="container header-inner">
    <a href="/" class="brand">
      <span class="brand-name">Nick Mourtoupalas</span>
      <span class="brand-tag">Visual Communication</span>
    </a>

    <nav class="site-nav">
      {nav.map((item) => (
        <a href={item.href} class="nav-link">{item.label}</a>
      ))}
    </nav>
  </div>
</header>

<style>
  .site-header {
    width: 100%;
    height: var(--nav-height);
    background: var(--bg);
    border-bottom: 1px solid rgba(128,128,128,0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-inner {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 8px;
    font-family: 'Inter', sans-serif;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 14px;
    font-weight: 700;
    color: var(--accent);
  }

  .brand-tag {
    color: var(--link);
    font-weight: 400;
  }

  .site-nav {
    display: flex;
    gap: 24px;
  }

  .nav-link {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 500;
    color: var(--text);
  }
  
  .nav-link:hover {
    color: var(--link);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .brand-tag {
      display: none;
    }
    .site-nav {
      gap: 16px;
    }
  }
</style>