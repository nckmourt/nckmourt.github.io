---
const nav = [
  { href: "/", label: "Home" },
  { href: "/graphics/", label: "Graphics" },
  { href: "/photo/", label: "Photo" },
  { href: "/about/", label: "About" },
];

const social = {
  github: "https://github.com/nckmourt",
  email: "mailto:nickmourtoupalas@gmail.com",
  linkedin: "https://www.linkedin.com/in/nickmourtoupalas",
};
---
<header class="site-header">
  <div class="header-inner">
    <div class="brand-cluster">
      <a href="/" class="brand">
        <span class="brand-name">NICK MOURTOUPALAS</span>
      </a>
      <div class="nav-social" aria-label="Social links">
        <a class="social-link" href={social.email} aria-label="Email">
          <svg viewBox="0 0 24 24" role="img" focusable="false" aria-hidden="true">
            <rect x="3.5" y="6" width="17" height="12" rx="2"></rect>
            <path d="M4 7l8 6 8-6"></path>
          </svg>
        </a>
        <a class="social-link" href={social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24" role="img" focusable="false" aria-hidden="true">
            <rect x="3" y="3" width="18" height="18" rx="4"></rect>
            <path d="M8 10v7"></path>
            <circle cx="8" cy="7.5" r="1"></circle>
            <path d="M12 17v-4c0-1.6 1.1-2.7 2.5-2.7S17 11.4 17 13v4"></path>
          </svg>
        </a>
        <a class="social-link" href={social.github} target="_blank" rel="noopener noreferrer" aria-label="GitHub">
          <svg viewBox="0 0 24 24" role="img" focusable="false" aria-hidden="true">
            <path d="M12 3.2a8.8 8.8 0 0 0-2.8 17.1c.4.1.6-.2.6-.5v-1.7c-2.4.5-2.9-1-2.9-1-.4-1-.9-1.3-.9-1.3-.8-.5.1-.5.1-.5.9.1 1.3.9 1.3.9.8 1.3 2 .9 2.5.7.1-.6.3-.9.5-1.2-1.9-.2-3.9-1-3.9-4.2 0-.9.3-1.7.9-2.2-.1-.2-.4-1.1.1-2.2 0 0 .7-.2 2.3.9a8.4 8.4 0 0 1 4.2 0c1.6-1.1 2.3-.9 2.3-.9.5 1.1.2 2 .1 2.2.6.6.9 1.4.9 2.2 0 3.3-2 4-3.9 4.2.3.3.6.8.6 1.6v2.4c0 .3.2.6.6.5A8.8 8.8 0 0 0 12 3.2"></path>
          </svg>
        </a>
      </div>
    </div>

    <nav class="site-nav">
      {nav.map((item) => (
        <a href={item.href} class="nav-link">{item.label}</a>
      ))}
    </nav>

    <details class="mobile-menu">
      <summary aria-label="Open navigation menu">
        <span class="hamburger" aria-hidden="true">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </summary>
      <nav class="mobile-nav">
        {nav.map((item) => (
          <a href={item.href} class="mobile-nav-link">{item.label}</a>
        ))}
      </nav>
    </details>
  </div>
</header>

<style>
  .site-header {
    width: 100%;
    height: var(--nav-height);
    background: var(--header-bg);
    border-bottom: 2px solid var(--header-border); /* Solid border uses variable */
    display: block;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-inner {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 40px;
    max-width: 100%;
  }

  .brand {
    height: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    min-width: 0;
  }

  .brand-cluster {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    min-width: 0;
  }

  .brand-name {
    font-family: 'Bebas Neue', sans-serif; /* Bebas Neue */
    font-weight: 400; /* Bebas Neue is 400 by default but looks bold */
    font-size: 20px;
    letter-spacing: 0.05em;
    color: var(--header-text);
    text-transform: uppercase;
    white-space: nowrap;
  }

  .site-nav {
    height: 100%;
    display: flex;
    align-items: center;
    gap: 40px;
    margin-left: auto;
  }

  .nav-social {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    margin-left: 0;
  }

  .social-link {
    width: 26px;
    height: 26px;
    border-radius: 999px;
    border: 1px solid #4b515d;
    background: #252a31;
    color: #d4d9e2;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
  }

  .social-link svg {
    width: 13px;
    height: 13px;
    stroke: currentColor;
    fill: none;
    stroke-width: 1.8;
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  .social-link:hover {
    background: #333a46;
    border-color: #7a828f;
    color: #ffffff;
    text-decoration: none;
  }

  .nav-link {
    height: 100%;
    display: inline-flex;
    align-items: center;
    font-family: 'Bebas Neue', sans-serif; /* Bebas Neue for nav too if requested, or keep Inter. User said "Bebas Neue for my name", usually implies headers. Let's make headers/nav match for specific look. */
    font-size: 20px;
    font-weight: 400;
    line-height: 1;
    color: var(--header-text);
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--link);
    text-decoration: none;
  }

  .mobile-menu {
    display: none;
    position: relative;
    margin-left: auto;
    flex-shrink: 0;
    height: 100%;
    align-items: center;
  }

  .mobile-menu summary {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    cursor: pointer;
    user-select: none;
    color: var(--header-text);
    padding: 0;
    margin: 0;
    line-height: 1;
  }

  .mobile-menu summary::-webkit-details-marker {
    display: none;
  }

  .hamburger {
    width: 20px;
    height: 14px;
    display: grid;
    gap: 3.5px;
    align-content: center;
  }

  .hamburger span {
    display: block;
    height: 2.5px;
    border-radius: 999px;
    background: var(--header-text);
  }

  .mobile-nav {
    position: absolute;
    right: 0;
    top: calc(100% + 10px);
    min-width: 170px;
    background: var(--header-bg);
    border: 1px solid var(--header-border);
    border-radius: 10px;
    padding: 10px;
    display: grid;
    gap: 6px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
  }

  .mobile-nav-link {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 20px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--header-text);
    text-decoration: none;
    padding: 6px 8px;
    border-radius: 6px;
    line-height: 1;
  }

  .mobile-nav-link:hover {
    text-decoration: none;
    color: var(--link);
    background: rgba(255, 255, 255, 0.06);
  }

  @media (max-width: 900px) {
    .site-header {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }

    .header-inner {
      display: flex !important;
      padding: 0 20px;
      gap: 12px;
    }

    .site-nav {
      display: none;
    }

    .mobile-menu {
      display: flex;
    }

    .mobile-menu summary {
      display: flex !important;
    }

    .brand-name {
      font-size: 20px;
      letter-spacing: 0.04em;
      overflow: hidden;
      text-overflow: ellipsis;
      display: inline-block;
      transform: translateY(1px);
    }

    .social-link {
      width: 20px;
      height: 20px;
    }

    .social-link svg {
      width: 10px;
      height: 10px;
    }

    .mobile-menu summary {
      transform: translateY(1px);
    }
  }
</style>
