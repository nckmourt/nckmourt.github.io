---
import SocialLinks from "./SocialLinks.astro";

const nav = [
  { href: "/", label: "Home" },
  { href: "/graphics/", label: "Graphics" },
  { href: "/photo/", label: "Photo" },
  { href: "/#about-contact", label: "About" },
];
---
<header class="site-header">
  <div class="header-inner">
    <div class="brand-cluster">
      <a href="/" class="brand">
        <span class="brand-name">NICK MOURTOUPALAS</span>
      </a>
      <SocialLinks className="nav-social" />
    </div>

    <nav class="site-nav">
      {nav.map((item) => (
        <a href={item.href} class="nav-link">{item.label}</a>
      ))}
    </nav>

    <details class="mobile-menu">
      <summary aria-label="Open navigation menu">
        <span class="hamburger" aria-hidden="true">
          <span></span>
          <span></span>
          <span></span>
        </span>
      </summary>
      <nav class="mobile-nav">
        {nav.map((item) => (
          <a href={item.href} class="mobile-nav-link">{item.label}</a>
        ))}
      </nav>
    </details>
  </div>
</header>

<style>
  .site-header {
    width: 100%;
    height: var(--nav-height);
    background: var(--header-bg);
    border-bottom: 2px solid var(--header-border); /* Solid border uses variable */
    display: block;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .header-inner {
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 40px;
    max-width: 100%;
  }

  .brand {
    height: 100%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    min-width: 0;
  }

  .brand-cluster {
    display: inline-flex;
    align-items: center;
    gap: 14px;
    min-width: 0;
  }

  .brand-name {
    font-family: 'Bebas Neue', sans-serif; /* Bebas Neue */
    font-weight: 400; /* Bebas Neue is 400 by default but looks bold */
    font-size: 20px;
    letter-spacing: 0.05em;
    color: var(--header-text);
    text-transform: uppercase;
    white-space: nowrap;
  }

  .site-nav {
    height: 100%;
    display: flex;
    align-items: center;
    gap: 40px;
    margin-left: auto;
  }

  .nav-social {
    margin-left: 0;
    --social-size: 26px;
    --social-icon-size: 13px;
  }

  .nav-link {
    height: 100%;
    display: inline-flex;
    align-items: center;
    font-family: 'Bebas Neue', sans-serif; /* Bebas Neue for nav too if requested, or keep Inter. User said "Bebas Neue for my name", usually implies headers. Let's make headers/nav match for specific look. */
    font-size: 20px;
    font-weight: 400;
    line-height: 1;
    color: var(--header-text);
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }
  
  .nav-link:hover {
    color: var(--link);
    text-decoration: none;
  }

  .mobile-menu {
    display: none;
    position: relative;
    margin-left: auto;
    flex-shrink: 0;
    height: 100%;
    align-items: center;
  }

  .mobile-menu summary {
    list-style: none;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    cursor: pointer;
    user-select: none;
    color: var(--header-text);
    padding: 0;
    margin: 0;
    line-height: 1;
  }

  .mobile-menu summary::-webkit-details-marker {
    display: none;
  }

  .hamburger {
    width: 20px;
    height: 14px;
    display: grid;
    gap: 3.5px;
    align-content: center;
  }

  .hamburger span {
    display: block;
    height: 2.5px;
    border-radius: 999px;
    background: var(--header-text);
  }

  .mobile-nav {
    position: absolute;
    right: 0;
    top: calc(100% + 10px);
    min-width: 170px;
    background: var(--header-bg);
    border: 1px solid var(--header-border);
    border-radius: 10px;
    padding: 10px;
    display: grid;
    gap: 6px;
    box-shadow: 0 12px 28px rgba(0, 0, 0, 0.35);
  }

  .mobile-nav-link {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 20px;
    letter-spacing: 0.04em;
    text-transform: uppercase;
    color: var(--header-text);
    text-decoration: none;
    padding: 6px 8px;
    border-radius: 6px;
    line-height: 1;
  }

  .mobile-nav-link:hover {
    text-decoration: none;
    color: var(--link);
    background: rgba(255, 255, 255, 0.06);
  }

  @media (max-width: 900px) {
    .site-header {
      display: block !important;
      visibility: visible !important;
      opacity: 1 !important;
    }

    .header-inner {
      display: flex !important;
      padding: 0 20px;
      gap: 12px;
    }

    .site-nav {
      display: none;
    }

    .mobile-menu {
      display: flex;
    }

    .mobile-menu summary {
      display: flex !important;
    }

    .brand-name {
      font-size: 20px;
      letter-spacing: 0.04em;
      overflow: hidden;
      text-overflow: ellipsis;
      display: inline-block;
      transform: translateY(1px);
    }

    .nav-social {
      --social-size: 20px;
      --social-icon-size: 10px;
    }

    .mobile-menu summary {
      transform: translateY(1px);
    }
  }
</style>
