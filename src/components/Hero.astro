---
import ImageCarousel from "./ImageCarousel.astro";

const { slides = [] } = Astro.props;
---
<section class="hero-home" aria-label="Featured image carousel">
  <ImageCarousel
    headline="Featured Graphics"    ctaLabel="Read more"
    ctaHref="/graphics/"
    marginTop="0px"
    slides={slides}
  />

  <div class="hero-intro container">
    <h1 class="hero-name">Nick Mourtoupalas</h1>
    <p class="hero-bio">
      I build data-driven visual coverage that helps readers understand how government and markets function.
      Drawing on newsroom reporting, quantitative analysis and technical development, I create durable tools that
      clarify complex institutions in moments that matter.
    </p>
  </div>
</section>

<style>
  .hero-home {
    width: 100%;
    background: #111111;
  }

  :global(.hero-home.is-scrolled .carousel-slide img) {
    transform: scale(1.1) !important;
  }

  .hero-intro {
    padding-top: clamp(24px, 5vw, 52px);
    padding-bottom: clamp(24px, 4vw, 40px);
    background: #111111;
  }

  .hero-name {
    margin: 0 auto 12px;
    width: min(100%, 980px);
    font-family: "Bebas Neue", sans-serif;
    font-weight: 400;
    font-size: clamp(2.2rem, 5vw, 3.6rem);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: #ffffff;
    line-height: 0.95;
  }

  .hero-bio {
    margin: 0 auto;
    width: min(100%, 980px);
    max-width: none;
    text-align: left;
    font-family: "Inter", sans-serif;
    font-size: 16px;
    line-height: 1.65;
    color: rgba(232, 237, 244, 0.92);
  }

  @media (max-width: 900px) {
    .hero-name {
      font-size: clamp(1.8rem, 8vw, 2.6rem);
      margin-bottom: 10px;
    }
  }

  @media (max-width: 600px) {
    .hero-intro {
      padding-top: 18px;
      padding-bottom: 26px;
    }

    .hero-bio {
      font-size: 15px;
      line-height: 1.6;
    }
  }
</style>
