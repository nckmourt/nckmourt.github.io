<section class="hero">
  <div class="hero-bg">
    <!-- Placeholder for hero background image -->
    <div class="overlay"></div>
  </div>
  
  <div class="hero-content">
    <h1 class="hero-title">Nick Mourtoupalas</h1>
    <p class="hero-lead">
      I tell the world's most important stories with maps, data visualization, and design.
    </p>
  </div>
</section>

<style>
  .hero {
    position: relative;
    width: 100%;
    height: calc(100vh - var(--nav-height));
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    background-color: #111;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    /* Replace this URL with your actual map/visual background */
    background-image: url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2072&auto=format&fit=crop'); 
    background-size: cover;
    background-position: center;
    z-index: 0;
  }

  .overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.4);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 600px;
    padding: 60px 40px;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(10px);
    border-radius: 4px;
    color: #fff;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .hero-title {
    font-family: 'Merriweather', serif;
    font-style: italic;
    font-size: 3.5rem;
    font-weight: 300;
    margin-bottom: 20px;
    color: #fff;
  }

  .hero-lead {
    font-family: 'Inter', sans-serif;
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    .hero-content {
      margin: 0 20px;
      padding: 40px 20px;
    }
  }
</style>
