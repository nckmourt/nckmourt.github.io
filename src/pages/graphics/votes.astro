---
import { getCollection } from "astro:content";
import GraphicsCategoryPage from "../../components/GraphicsCategoryPage.astro";

const projects = await getCollection("projects");

const votesProjects = projects
  .filter((project) => project.data.tags.includes("votes"))
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---
<GraphicsCategoryPage
  pageTitle="Votes"
  pageDescription="Vote trackers and election-related projects."
  projects={votesProjects}
  emptyState="No vote-focused projects found yet."
/>
