---
import { getCollection } from "astro:content";
import GraphicsCategoryPage from "../../components/GraphicsCategoryPage.astro";

const projects = await getCollection("projects");

const breakingNewsProjects = projects
  .filter((project) => project.data.tags.includes("breaking-news"))
  .sort((a, b) => (a.data.date < b.data.date ? 1 : -1));
---
<GraphicsCategoryPage
  pageTitle="Breaking News"
  pageDescription="Fast-turn graphics built for major news moments."
  projects={breakingNewsProjects}
  emptyState="No breaking-news projects found yet."
/>
