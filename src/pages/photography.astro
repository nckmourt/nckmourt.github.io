---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

// Placeholder data for photography - replace with actual content/collection later
const photos = [
  { id: 1, src: "https://images.unsplash.com/photo-1542202229-21728e6aaa0a?auto=format&fit=crop&q=80&w=800", caption: "Urban Architecture" },
  { id: 2, src: "https://images.unsplash.com/photo-1498036882173-b41c28a8ba34?auto=format&fit=crop&q=80&w=800", caption: "Minimalist Design" },
  { id: 3, src: "https://images.unsplash.com/photo-1449824913935-59a10b8d2000?auto=format&fit=crop&q=80&w=800", caption: "City Lights" },
  { id: 4, src: "https://images.unsplash.com/photo-1517732306149-e8f829eb588a?auto=format&fit=crop&q=80&w=800", caption: "Abstract Shadows" },
  { id: 5, src: "https://images.unsplash.com/photo-1516035069371-29a1b244cc32?auto=format&fit=crop&q=80&w=800", caption: "Film Grain" },
  { id: 6, src: "https://images.unsplash.com/photo-1533158326339-7f3cf2404354?auto=format&fit=crop&q=80&w=800", caption: "Texture" },
];
---

<BaseLayout title="Photography | Nick Mourtoupalas" description="Personal photography collection.">
  <Fragment slot="header"><Header /></Fragment>

  <section class="section">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">Photography</h1>
        <p class="page-lead">A collection of personal work and visual experiments.</p>
      </div>

      <div class="photo-grid">
        {photos.map(photo => (
          <div class="photo-item">
            <img src={photo.src} alt={photo.caption} loading="lazy" />
            <div class="caption">{photo.caption}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>

<style>
  .section {
    padding: 60px 0;
  }

  .page-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 60px;
  }

  .page-title {
    font-size: 3rem;
    margin-bottom: 16px;
  }

  .page-lead {
    font-family: 'Inter', sans-serif;
    color: var(--muted);
    font-size: 1.1rem;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .photo-item {
    break-inside: avoid;
    margin-bottom: 20px;
    position: relative;
    overflow: hidden;
    border-radius: 4px;
    background: #f0f0f0;
  }

  .photo-item img {
    display: block;
    width: 100%;
    height: auto;
    transition: transform 0.3s ease;
  }

  .photo-item:hover img {
    transform: scale(1.03);
  }

  .caption {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 15px;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .photo-item:hover .caption {
    opacity: 1;
  }
</style>
