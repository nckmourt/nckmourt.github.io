---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---
<BaseLayout title="Contact | Nick Mourtoupalas" description="Contact details.">
  <Fragment slot="header"><Header /></Fragment>

  <section class="panel" style="margin-top:18px;">
    <div class="kicker">Contact</div>
    <h1 class="h1">Get in touch</h1>
    <p class="lead">Placeholder: short line about what kinds of inquiries you welcome.</p>

    <div class="grid" style="margin-top:14px;">
      <div class="col-12 col-6 heroBox">
        <div class="kicker">Email</div>
        <div style="font-size:18px; font-weight:700; margin-top:6px;">
          <a href="mailto:hello@example.com">hello@example.com</a>
        </div>
        <div class="muted" style="margin-top:8px;">Replace with your preferred professional email.</div>
      </div>

      <div class="col-12 col-6 heroBox">
        <div class="kicker">Social</div>
        <ul style="margin:10px 0 0; padding-left:18px;">
          <li><a href="https://www.linkedin.com/" target="_blank" rel="noreferrer">LinkedIn (placeholder)</a></li>
          <li><a href="https://github.com/" target="_blank" rel="noreferrer">GitHub (placeholder)</a></li>
          <li><a href="https://www.instagram.com/" target="_blank" rel="noreferrer">Instagram (placeholder)</a></li>
        </ul>
      </div>
    </div>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>