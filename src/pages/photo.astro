---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const photos = [
  { id: 1, src: "/photos/35070831673_975b40802c_b.jpg", alt: "Photo 1" },
  { id: 2, src: "/photos/36027750031_59b4987814_b.jpg", alt: "Photo 2" },
  { id: 3, src: "/photos/35329166424_6d523e6654_b.jpg", alt: "Photo 3" },
  { id: 4, src: "/photos/36124029652_e50bf0d900_b.jpg", alt: "Photo 4" },
  { id: 5, src: "/photos/36158808351_a40b42edb6_b.jpg", alt: "Photo 5" },
  { id: 6, src: "/photos/35897171070_24b34964e3_b.jpg", alt: "Photo 6" },
  { id: 7, src: "/photos/36317102492_6a9371f00f_b.jpg", alt: "Photo 7" },
  { id: 8, src: "/photos/36348085541_ec239636ea_b.jpg", alt: "Photo 8" },
  { id: 9, src: "/photos/41071355214_f38170d93c_b.jpg", alt: "Photo 9" },
  { id: 10, src: "/photos/39981195220_b9e3e3332a_b.jpg", alt: "Photo 10" },
  { id: 11, src: "/photos/45987968891_9538f7560e_b.jpg", alt: "Photo 11" },
];
---

<BaseLayout title="Photography | Nick Mourtoupalas" description="Photography collection.">
  <Fragment slot="header"><Header /></Fragment>

  <section class="photo-page">
    <section class="photo-gallery" aria-label="Photography gallery">
      {photos.map((photo) => (
        <figure class="photo-tile">
          <img src={photo.src} alt={photo.alt} loading="lazy" />
        </figure>
      ))}
    </section>
  </section>

  <Fragment slot="footer"><Footer /></Fragment>
</BaseLayout>

<style>
  :global(body),
  :global(main) {
    background: #111111;
  }

  .photo-page {
    padding: 0 0 44px;
    min-height: 100vh;
    color: #f5f7fb;
  }

  .photo-gallery {
    max-width: 1400px;
    margin: 0 auto;
    padding: 18px 22px 0;
    column-count: 3;
    column-gap: 18px;
  }

  .photo-tile {
    margin: 0 0 18px;
    overflow: hidden;
    background: #080b10;
    break-inside: avoid;
    line-height: 0;
  }

  .photo-tile img {
    display: block;
    width: 100%;
    height: auto;
    max-width: 100%;
    max-height: none;
    object-fit: initial;
    aspect-ratio: auto;
    transition: opacity 0.2s ease;
  }

  .photo-tile:hover img {
    opacity: 0.95;
  }

  @media (max-width: 1100px) {
    .photo-gallery {
      column-count: 2;
    }
  }

  @media (max-width: 700px) {
    .photo-gallery {
      column-count: 1;
      padding: 14px 16px 0;
      column-gap: 14px;
    }

    .photo-tile {
      margin-bottom: 14px;
    }
  }
</style>
